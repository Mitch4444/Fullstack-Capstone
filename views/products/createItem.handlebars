{{!-- get '/item/createitem' --}}
<main role="main">
  <div class="container text-left">
    <div class="row">
      <div class="mx-auto">
        <div class="my-4 card card-body">
          <h2 role="heading" class="text-center main-title display-5">Create Product</h2>

          <form role="form" action="/item/createitem" method="post" class="mt-3">
            <div class="form-group">
              <label for="productName">Product Name</label>
              <input role="textbox" type="text" class="form-control form-control-lg" name="productName" required>
            </div>

            <div class="form-group">
              <label for="brand">Brand</label>
              <input role="textbox" type="text" class="form-control form-control-lg" name="brand" required>
            </div>

            <div class="row">
              <div class="form-group col-6">
                <label for="cost">Cost</label>
                <input type="number" min="0.00" step="0.01" class="form-control form-control-lg" name="cost" placeholder="$" required>
              </div>

              <div class="form-group col-6">
                <label for="quantity">Quantity</label>
                <input type="number" class="form-control form-control-lg" name="quantity" required>
              </div>

            </div>

            <div class="form-group">
              <label for="notes">Notes</label>
              <textarea class="form-control form-control-lg" rows="3" name="notes" required></textarea>
            </div>

            <div class="form-group">
              <label for="imageURL">Image URL</label>
              <input role="textbox" type="url" class="form-control form-control-lg" name="imageURL" required>
            </div>

            <div class="form-group">
              <label for="purchaseDate">Purchased Date</label>
              <input type="date" class="form-control form-control-lg" name="purchaseDate" required>
            </div>

            <button role="button" type="submit" class="btn btn-success btn-large btn-block btn-lg">Create Product</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>