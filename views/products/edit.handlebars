{{!-- get '/item/:id/edit' --}}
<main role="main">
  <div class="container text-left">
    <div class="row">
      <div class="mx-auto">
        <div class="my-4 card card-body">
          <h2 role="heading" class="text-center main-title display-5">Edit Product</h2>

          <form role="form" action="/item/{{product._id}}?_method=PUT" method="post" class="mt-3">
           <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
              <label for="productName">Product Name</label>
              <input role="textbox" type="text" class="form-control form-control-lg" name="productName" value="{{product.productName}}" required>
            </div>

            <div class="form-group">
              <label for="brand">Brand</label>
              <input role="textbox" type="text" class="form-control form-control-lg" name="brand" value="{{product.brand}}" required>
            </div>

            <div class="row">
              <div class="form-group col-6">
                <label for="cost">Cost</label>
                <input role="spinbutton" type="number" min="0.00" step="0.01" class="form-control form-control-lg" name="cost" placeholder="$" value="{{product.cost}}" required>
              </div>

              <div class="form-group col-6">
                <label for="quantity">Quantity</label>
                <input ole="spinbutton" type="number" class="form-control form-control-lg" name="quantity" value="{{product.quantity}}" required>
              </div>

            </div>

            <div class="form-group">
              <label for="notes">Notes</label>
              <input role="textbox" type="text" class="form-control form-control-lg" name="notes" value="{{product.notes}}"required></input>
            </div>

            <div class="form-group">
              <label for="imageURL">Image URL</label>
              <input role="textbox" type="url" class="form-control form-control-lg" name="imageURL" value="{{product.imageURL}}"required>
            </div>

            <div class="form-group">
              <label for="purchaseDate">Purchased Date</label>
               <input type="date" class="form-control form-control-lg" name="purchaseDate" value="{{product.purchaseDate}}"required>
            </div>

            <button role="button" type="submit" class="btn btn-success btn-large btn-block btn-lg">Submit Edit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>